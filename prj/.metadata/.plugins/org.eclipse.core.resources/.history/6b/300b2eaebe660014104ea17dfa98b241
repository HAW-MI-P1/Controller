package common;

/******************************************************************************
 *                              Class Definition                              *
 *****************************************************************************/

public class Logger
{
	
/******************************************************************************
 *                              Public Methods                                *
 *****************************************************************************/
	
    public static void log(String msg, ComponentID component)
    {
        System.out.println(component.toString() + ": " + msg);
    }
}